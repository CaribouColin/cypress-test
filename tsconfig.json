{
    "compileOnSave": false,
    "compilerOptions": {
      "strict": true,
      "rootDir": ".",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "importHelpers": true,
      "target": "es2022",
      "module": "es2022",
      "esModuleInterop": true,
      "typeRoots": ["node_modules/@types", "./types/"],
      "lib": ["es2022", "dom"],
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "baseUrl": ".",
      "outDir": "dist",
      "paths": {
        "*": ["node_modules/*"],
        "tslib": ["node_modules/tslib/tslib.d.ts"]
      }
    },
    "exclude": ["node_modules", "tmp", "**/__mocks__/*"]
  }
  